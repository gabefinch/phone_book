<div class="panel panel-default">
  <div class="panel-heading"><h3>Add a contact: </h3></div>
  <div class="panel-body">
    <form action="/add" method="post">
      <div class="input-group">
        <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
        <input type="text" class="form-control" name="name" placeholder="Name" aria-describedby="basic-addon1">
      </div>
      <br>
      <div class="input-group">
        <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-phone-alt" aria-hidden="true"></span></span>
        <input type="text" class="form-control" name="number" placeholder="Number" aria-describedby="basic-addon1">
      </div>
      <br>
      <div class="input-group">
        <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-phone" aria-hidden="true"></span></span>
        <input type="text" class="form-control" name="type" placeholder="Line type e.g. Cellular" aria-describedby="basic-addon1">
      </div>
      <br>
      <button type="submit" class="btn btn-sm btn-primary">Add</button>
      <button type="reset" class="btn btn-sm btn-danger">Reset</button>
  </form>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading"><h3>Your contacts <span class="badge"><%= @list.length() %></span></h3></div>
  <div class="panel-body">
    <div class="list-group">
      <% @list.each() do |contact| %>
        <a href="/detail/<%= contact.id() %>" class="list-group-item">
        <%= contact.name() %>
        </a>
      <% end %>
    </div>
  </div>
</div>
